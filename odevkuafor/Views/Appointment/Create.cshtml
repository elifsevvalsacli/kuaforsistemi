@model List<odevkuafor.Models.AppointmentViewModel>

<h2>Randevu Oluştur</h2>

<form asp-action="Create" method="post">
    <div>
        <label for="CustomerName">Adınız:</label>
        <input type="text" id="CustomerName" name="CustomerName" required />
    </div>

    <div>
        <label for="AppointmentDate">Randevu Tarihi:</label>
        <input type="datetime-local" id="AppointmentDate" name="AppointmentDate" required />
    </div>

    <div>
        <label for="EmployeeId">Kuaför Seçin:</label>
        <select id="EmployeeId" name="EmployeeId" required>
            <option value="">Kuaför Seçin</option>
            @foreach (var employee in Model)
            {
                <option value="@employee.EmployeeId">@employee.EmployeeName</option>
            }
        </select>
    </div>

    <div>
        <label for="ServiceId">Hizmet Seçin:</label>
        <select id="ServiceId" name="ServiceId" required>
            <option value="">Hizmet Seçin</option>
            @foreach (var employee in Model)
            {
                <optgroup label="@employee.EmployeeName">
                    @foreach (var service in employee.Services)
                    {
                        <option value="@service.Id">@service.Name - @service.Price</option>
                    }
                </optgroup>
            }
        </select>
    </div>

    <button type="submit">Randevu Oluştur</button>
</form>
