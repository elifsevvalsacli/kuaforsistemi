@model IEnumerable<odevkuafor.Models.Service>
<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="container">
        <h2>Hizmetler</h2>
        <a asp-action="AddService" class="btn btn-primary mb-3">Yeni Hizmet Ekle</a>

        <table class="table">
            <thead>
                <tr>
                    <th>İsim</th>
                    <th>Fiyat</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td>@service.Name</td>
                        <td>@service.Price</td>
                        <td>
                            <form asp-action="DeleteService" asp-controller="Admin" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@service.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Bu hizmeti silmek istediğinizden emin misiniz?')">
                                    Sil
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
