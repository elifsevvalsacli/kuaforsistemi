@model Service

<h1>Hizmet Türü Ekle</h1>

<form asp-action="AddService" method="post">
    <div class="mb-3">
        <label>Hizmet Adı</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Ücret</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="mb-3">
        <label>Çalışanlar</label>
        @if (ViewBag.Employees != null)
        {
            foreach (var employee in ViewBag.Employees)
            {
                <div class="form-check">
                    <input type="checkbox"
                           name="employeeIds"
                           value="@employee.Id"
                           class="form-check-input" />
                    <label class="form-check-label">
                        @employee.Name
                    </label>
                </div>
            }
        }
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Services" class="btn btn-secondary">İptal</a>
</form>
